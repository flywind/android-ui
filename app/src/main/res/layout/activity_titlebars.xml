<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uxdpen.ui.android.activity.examples.TitlebarsActivity">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="自定义通用标题栏"
        titlebar:centerType="textView"
        titlebar:titleBarColor="#ff6600"
        titlebar:fillStatusBar="true"
        titlebar:statusBarColor="#ff6600"
        titlebar:centerTextColor="#ffffff"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:dividerHeight="1px"
        android:overScrollMode="never"/>

</RelativeLayout>
